<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Story6">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_marginVertical="50dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pixeltrue_healthy_eating_1" />

    <TextView
        android:id="@+id/teksStory6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="Aku harap kamu selalu bahagia dan sehat selalu\n begitu juga dengan diriku sendiri~\n\n''Hatiku tenang karena mengetahui\nbahwa apa yang melewatkanku tidak akan\npernah menjadi takdirku...\n\nDan apa yang menjadi takdirku tidak akan \npernah melewatkanku''\n- Umar Bin Khattab -"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnBaiklah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baiklah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teksStory6" />
</androidx.constraintlayout.widget.ConstraintLayout>