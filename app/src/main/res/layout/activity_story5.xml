<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Story5">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pixeltrue_support_1" />

    <TextView
        android:id="@+id/teksStory5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="Aku membuatnya dengan nama ''Hi Friends''\nAplikasi android sederhana,\nyang dibangun dari ilmu yang kupelajari lama \ndan aku ingin ilmu ku ini bisa berguna\n\nðŸ˜‡"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnAmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amin"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teksStory5" />
</androidx.constraintlayout.widget.ConstraintLayout>